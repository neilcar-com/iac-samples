kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: registrypvc
  namespace: infra
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 4Gi
  storageClassName: slow
---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: registry
  labels:
    app: registry
  namespace: infra
spec:
  replicas: 1
  selector:
    matchLabels:
      app: registry
  template:
    metadata:
      labels:
        app: registry
    spec:
      containers:
      - resources:
        name: registry
        image: registry:2
        ports:
        - name: registry-port
          containerPort: 5000
        imagePullPolicy: Always
        env:
        - name: REGISTRY_HTTP_TLS_CERTIFICATE
          value: /opt/docker-registry/cert/registry.crt
        - name: REGISTRY_HTTP_TLS_KEY
          value: /opt/docker-registry/cert/registry.key
        volumeMounts:
        - mountPath: /var/lib/registry
          name: registry-data
        - mountPath: /opt/docker-registry/cert/
          name: certs
      volumes:
      - name: registry-data
        persistentVolumeClaim:
          claimName: registrypvc
      - name: certs
        secret:
          secretName: tlscert
---
kind: Service
apiVersion: v1
metadata:
  name: registry
  namespace: infra
spec:
  ports:
  - port: 5000
    targetPort: 5000
  selector:
    app: registry
