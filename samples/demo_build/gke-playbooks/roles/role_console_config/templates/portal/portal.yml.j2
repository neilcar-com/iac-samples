---
kind: Service
apiVersion: v1
metadata:
  name: portalhttp
  namespace: ingress-nginx
spec:
  selector:
    app: portal
  type: NodePort
  ports:
    - name: portal-http
      port: 80
---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  creationTimestamp: null
  labels:
    app: portal
  name: portal
  namespace: ingress-nginx
spec:
  template:
    metadata:
      labels:
        app: portal
      name: portal
      namespace: ingress-nginx
    spec:
      containers:
      - name: portalhttpd
        image: registry.infra.svc.cluster.local:5000/infra/portal_httpd
        ports:
        - name: http
          containerPort: 80

---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: portal-ingress
  namespace: ingress-nginx
  annotations:
    kubernetes.io/ingress.class: nginx
    kubernetes.io/tls-acme: 'true'
    nginx.ingress.kubernetes.io/auth-type: basic
    nginx.ingress.kubernetes.io/auth-secret: basic-auth
    nginx.ingress.kubernetes.io/auth-realm: "Authentication Required"
    nginx.org/auth-type: basic
    nginx.org/auth-secret: basic-auth
    nginx.org/auth-realm: "Authentication Required"
spec:
  rules:
  - host: {{ groups['k8s-master'][0] }}
    http:
      paths:
      - path: /
        backend:
          serviceName: portalhttp
          servicePort: 80
  tls:
  - secretName: console-cert
    hosts:
    - {{ groups['k8s-master'][0] }}