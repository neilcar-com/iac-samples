apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: gogs-ingress
  namespace: infra
  annotations:
    kubernetes.io/ingress.class: nginx
    kubernetes.io/tls-acme: 'true'
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
spec:
  rules:
  - host: gogs-{{ groups['k8s-master'][0] }}
    http:
      paths:
      - path: /
        backend:
          serviceName: gogs-app
          servicePort: 3000
  tls:
  - secretName: console-cert
    hosts:
    - gogs-{{ groups['k8s-master'][0] }}